@model IEnumerable<SoccerStats.ViewModels.Admin.Teams.AdminTeamsViewModel>

@{
    ViewData["Title"] = "Admin Teams View";
}

<h1>Admin Teams View</h1>

<h2><a asp-controller="Admin" asp-action="CreateTeam">Create Team</a></h2>

<table>
    <tr>
        <th>Team Name</th>
        <th>Points</th>
        <th>Wins</th>
        <th>Ties</th>
        <th>Losses</th>
    </tr>
    @foreach (var team in Model)
    {
<tr>
    <th>@team.Name</th>
    <th>@team.Points</th>
    <th>@team.Wins</th>
    <th>@team.Ties</th>
    <th>@team.Losses</th>
    <th><a asp-controller="Admin" asp-action="EditTeam" asp-route-id="@team.Id" method="get">Edit</a></th>
    <th>
        <form method="post" asp-controller="Admin" asp-action="DeleteTeam" asp-route-id="@team.Id">
            <button class="btn btn-danger order-button">Delete</button>
        </form>
    </th>
</tr>
    }
</table>

